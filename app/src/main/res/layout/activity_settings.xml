<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Time picker for morning update -->
    <ImageView
        android:id="@+id/btn_morning_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/morning_update_icon" />

    <ImageView
        android:id="@+id/btn_evening_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/evening_update_icon" />


    <include
        layout="@layout/bottom_navigation_layout"
        android:id="@+id/bottom_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"/>


    <!-- Add more configurable settings as needed -->

</LinearLayout>
