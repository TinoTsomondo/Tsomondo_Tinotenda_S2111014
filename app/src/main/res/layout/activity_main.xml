<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F4FE"
    android:gravity="center">

    <!-- Adding the text "S2111014" at the top -->
    <TextView
        android:id="@+id/tv_student_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S2111014"
        android:textSize="20sp"
    android:textColor="#000000"
    android:padding="8dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"/>

    <!-- Adding an ImageView on top of the Skycast text -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_wa"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_student_id"
        android:padding="16dp"/>

    <!-- Original Skycast TextView -->
    <TextView
        android:id="@+id/tv_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SkyCast"
        android:textSize="24sp"
        android:textColor="#000000"
        android:paddingBottom="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"/>

    <!-- Original Get Started Button -->
    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textSize="18sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#000000"
        android:layout_below="@id/tv_welcome_message"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
