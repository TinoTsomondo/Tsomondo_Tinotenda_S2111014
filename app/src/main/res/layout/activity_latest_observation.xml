<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F4FE"
    android:paddingBottom="32dp">

    <!-- ListView for weather observations -->
    <ListView
        android:id="@+id/ObservationListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_navigation_layout"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Button layout -->
    <Button
        android:id="@+id/btn_3_day_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Day Forecast"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/button_background" />

    <!-- Include your bottom navigation layout -->
    <include
        layout="@layout/bottom_navigation_layout"
        android:id="@+id/bottom_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
